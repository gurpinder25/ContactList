@page
@model AllContactsModel
@{
    ViewData["Title"] = "Your Library";
}
<h2 style="color:white;">______________________________________________________</h2>
<form method="get" action="/Search" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="submit" value="Back" style="background:white" />
    </div>
</form>
<h2 style="color:white;">______________________________________________________</h2>

@{int i = 1;}
@{int j = 0;}
@foreach (var item in Model.display)
{
    <h1>@i. @item</h1>
    <h3>PhoneNumber @Model.displayCopies[j]</h3>
    i++;
    j++;
}

<h2 style="color:white;">______________________________________________________</h2>

<form method="get" action="/Remove" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Name" />
        <input type="submit" value="Delete" style="background:red" />
    </div>
</form>

<h2 style="color:white;">______________________________________________________</h2>

<form method="get" action="/Update" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:left">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Name" style="width:100%;" />
        <input type="text" name="id" class="form-control" placeholder="Phone Number" style="width:100%;" />
        <input type="submit" value="Update" style="background:white" />
    </div>
</form>